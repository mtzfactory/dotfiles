[includeIf "gitdir:~/paack/"]
  path = ~/.gitconfig-paack

[includeIf "gitdir:~/personal/"]
  path = ~/.gitconfig-mtz

[pull]
  ff = only
  rebase = true

[init]
  defaultBranch = main

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[alias]
  ch = log --pretty=format:"*\\ (%h)\\ %s" --no-merges
  # git ch v1.1.0 v1.0.0

[core]
  pager = less -F -X

[fetch]
  prune = true

[diff]
  colorMoved = zebra
