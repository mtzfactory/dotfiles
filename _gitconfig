[includeIf "gitdir:~/paack/"]
  path = ~/.gitconfig-paack

[includeIf "gitdir:~/paack/development/apps/mobile-party/"]
  path = ~/.gitconfig-mobile-bot

[includeIf "gitdir:~/personal/"]
  path = ~/.gitconfig-mtz

[pull]
  ff = only
  rebase = true

[init]
  defaultBranch = main

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[alias]
  # git ch v1.1.0 v1.0.0
  ch = log --pretty=format:"*\\ (%h)\\ %s" --no-merges
  # git c4wt git@your-repo.git
  c4wt = clone-for-worktrees
  wt = worktree
  # get git directory path
  path = rev-parse --git-dir

[core]
  pager = less -F -X

[fetch]
  prune = true

[diff]
  colorMoved = zebra
